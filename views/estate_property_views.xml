<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available': 1}</field>
    </record>

    <record id="estate_property_types_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_offers_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property Search">
                <field name="name" string="Property Name" />
                <field name="bedrooms"/>
                <field name="living_area" string="Minimal living area (sqm)" filter_domain="[('living_area', '&gt;', self)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Available" name="available" domain="[('date_availability', '&lt;=', context_today().strftime('%%Y-%%m-%%d'))]"/> <!-- (context_today() - datetime.timedelta(days=1)).strftime('%%Y-%%m-%%d'))]"/> datetime.date.today() -->
                <group expand="1" string="Group By">
                    <filter string="Postcode Group" name="postcode" context="{'group_by': 'postcode', 'residual_visible': True}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_set_sold" type="object" string="Sold" class="oe_highlight" states="new,offer_received,offer_accepted"/>
                    <button name="action_cancel" type="object" string="Cancel" class="oe_highlight" states="new,offer_received,offer_accepted"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,cancelled,sold,offer_accepted,offer_received"/> <!-- options="{'clickable': '1', 'fold_field': 'fold'}"/> -->
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <h1 class="mb16">
                        <field name="name" class="o_text_overflow" placeholder="Type in a name"/>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_edit_color': True}"/>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                            <field name="expected_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group string="Description">
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible': [('garden', '!=', True)]}"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '!=', True)]}"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" attrs="{'readonly': ['|', '|', ('state', '=', 'offer_accepted'), ('state', '=', 'cancelled'), ('state', '=', 'sold')]}">
                                <tree string="Offers" editable="True" default_order="deadline_date" decoration-success="state=='accepted'" decoration-danger="state=='refused'">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="deadline_date"/>
                                    <button name="action_accept_offer" string="Accept" type="object" icon="fa-check" attrs="{'invisible': ['|', ('state', '=', 'refused'), ('state', '=', 'accepted')]}"/>
                                    <button name="action_refuse_offer" string="Refuse" type="object" icon="fa-times" attrs="{'invisible': ['|', ('state', '=', 'refused'), ('state', '=', 'accepted')]}"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success="state in ('offer_accepted', 'offer_received')" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'">
                <field name="name" string="Title"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>










    <record id="estate_property_type_view_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(estate_property_offers_action)d"
                                type="action" icon="fa-briefcase"
                                attrs="{'invisible': [('offer_count', '=', 0)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="offer_count"/>
                                </span>
                                <span class="o_stat_text" attrs="{'invisible': [('offer_count', '!=', 1)]}">Offer</span>
                                <span class="o_stat_text" attrs="{'invisible': [('offer_count', '&lt;', 2)]}">Offers</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="mb16 o_text_overflow" placeholder="Type in a property type name"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_tags_view_form" model="ir.ui.view">
        <field name="name">estate.property.tags.form</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" placeholder="Type in a tag name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_tags_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tags.tree</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offers_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offers.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Offers" default_order="property_id" decoration-success="state=='accepted'" decoration-danger="state=='refused'"> <!-- bottom/top/True -->
                <field name="property_id"/>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="deadline_date"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

</odoo>